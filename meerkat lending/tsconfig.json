{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "meerkat lending/next-env.d.ts",
    "meerkat lending/**/*.ts",  // Asegúrate de incluir solo lo necesario
    "meerkat lending/**/*.tsx"  // Asegúrate de incluir solo lo necesario
  ],
  "exclude": [
    "node_modules"
  ]
}
